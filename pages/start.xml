<page id="start" bg_image="tech-bg-lab.png" bg_music="osts-vilo.mp3">
  <agent
    id="teste"
    text="Hello World"
    color="white"
    x="center"
    y="center"
    font-size="70"
  />

  <agent
    id="test_video3"
    video="videoplayback_1_.mp4"
    width="200"
    x="center"
    y="400"
    draggable="true"
  />

  <agent
    id="drop"
    image="tech-switchunlocked.png"
    drop_accept="test-video-3"
    on_drop="set(can_go_to_page_2, true)"
  />

  <agent
    id="next_page_text"
    text="Proxima Pagina"
    animation="glitch"
    y="480"
    x="640"
  />

  <fab-if when="$can_go_to_page_2 = true">
    <agent
      id="next_page_button"
      image="forest-sign-2.png"
      y="530"
      x="700"
      animation="click-bounce"
      on_click="goToPage('middle')"
    />
  </fab-if>
</page>
